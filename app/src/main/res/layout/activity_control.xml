<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ControlActivity">
    <ImageButton
            android:layout_width="263dp"
            android:layout_height="134dp" app:srcCompat="@android:drawable/arrow_up_float"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageButtonUP"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="125dp"
            android:layout_marginBottom="328dp" app:layout_constraintBottom_toTopOf="@+id/imageButtonDWN"/>
    <ImageButton
            android:layout_width="263dp"
            android:layout_height="134dp" app:srcCompat="@android:drawable/arrow_down_float"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageButtonDWN"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="125dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>